%br
%table
  %tbody
    %tr
      %td.title{colspan: 2}
        = link_to @event.title, event_url(@event.code)
        %br
        %span.sub-title
          #{@event.city} (#{@event.country.name})
          %br
          #{event_date(@event)}

    %tr
      %td.content{colspan: 2}
        %p
          - @event.tag_list.each do |tag|
            .tag= tag
        %p= @event.description
        %p= raw @event.content
        %br
        %p.button-blue.text-center
          = link_to 'LEGI PLI', event_url(@event.code)

    %tr.footer
      %td
        = link_to image_tag('https://eventaservo.org/eventa_servo_logo.png', size: 48), 'https://eventaservo.org'
      %td
        = yield(:event_footer)
