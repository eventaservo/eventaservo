- if @tempozono == @event.time_zone
  .small.text-right
    = link_to 'Ŝanĝi horzonon', '#', data: { target: '#timezoneModal', toggle: 'modal'}
- else
  = link_to '#', data: { target: '#timezoneModal', toggle: 'modal'} do
    - if @event.komenca_tago(tempozono: @event.time_zone) != @event.komenca_tago(tempozono: @tempozono)
      %hr
      = render partial: 'kalendareto', locals: { event: @event, tz: @tempozono }
    = render partial: 'horoj', locals: { tz: @tempozono }

