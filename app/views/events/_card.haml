.card.mb-3{class: event_color_class(event)}
  .card-body
    %h5.card-title
      = event_flag(event)
      - titolo = event.title
      - if event.participants.size > Constants::FAJRA_EVENTO_PARTOPRENONTOJ
        - titolo = "ðŸ”¥ #{titolo}"
      = link_to titolo, event_path(code: event.ligilo), class: ("cancelled" if event.cancelled)
    .card-text.text-muted
      = display_organizations_for_event(event, limited: true)
      = display_event_tags(event)
      %p.small
        = event.komenca_horo(horzono: (cookies[:horzono] || event.time_zone)) unless (event.multtaga? or event.tuttaga?)

        = event_date(event)
        %br
        - if event.universala?
          (Reta evento)
        - else
          = link_to event.city, events_by_city_path(event.country.continent, country_name: event.country.name, city_name: event.city), class: 'card-link'
          = link_to "(#{event.country.name})", events_by_country_path(event.country.continent, country_name: event.country.name), class: 'card-link'
    %p.card-text
      = event.description
