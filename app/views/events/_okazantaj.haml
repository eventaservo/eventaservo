- if cookies[:vidmaniero] == 'kartoj'
  - if @today_events.any?
    %br
    %h5.text-center.font-weight-bold #{@today_events.ne_nuligitaj.length} okazas hodia≈≠
    .row
      - @today_events.order('countries.code').each do |evento|
        .col-12.col-md-6
          .okazantaj-eventoj
            %h6.text-truncate
              = event_flag(evento)
              = link_to evento.title, event_path(evento.ligilo), class: ("cancelled" if evento.cancelled)
              .small.pl-4
                = evento.online ? 'Reta' : "#{evento.city} (#{evento.country.code.upcase})"
                = display_event_days_left(evento)
%br
