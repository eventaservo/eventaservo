<% if @uzanto.has_public_contact? %>
  <div class="lead">Kontaktoj</div>
  <div class="list-group">
    <% if @uzanto.persona_retejo.present? %>
      <%= link_to @uzanto.persona_retejo, target: :_blank, class: 'list-group-item list-group-item-action' do %>
        <%= image_tag('www.svg', size: 28) %>
        Persona retejo
      <% end %>
    <% end %>
    <% if @uzanto.youtube.present? %>
      <%= link_to @uzanto.youtube, target: :_blank, class: 'list-group-item list-group-item-action' do %>
        <%= image_tag('youtube-link.svg', size: 28) %>
        YouTube
      <% end %>
    <% end %>
    <% if @uzanto.telegram.present? %>
      <%= link_to @uzanto.telegram, target: :_blank, class: 'list-group-item list-group-item-action' do %>
        <%= image_tag('telegram-link.svg', size: 28) %>
        Telegram
      <% end %>
    <% end %>
    <% if @uzanto.instagram.present? %>
      <%= link_to @uzanto.instagram, target: :_blank, class: 'list-group-item list-group-item-action' do %>
        <%= image_tag('instagram-link.svg', size: 28) %>
        Instagram
      <% end %>
    <% end %>
    <% if @uzanto.twitter.present? %>
      <%= link_to @uzanto.twitter, target: :_blank, class: 'list-group-item list-group-item-action' do %>
        <%= image_tag('twitter.svg', size: 28) %>
        Twitter
      <% end %>
    <% end %>
    <% if @uzanto.facebook.present? %>
      <%= link_to @uzanto.facebook, target: :_blank, class: 'list-group-item list-group-item-action' do %>
        <%= image_tag('facebook.svg', size: 28) %>
        Facebook
      <% end %>
    <% end %>
    <% if @uzanto.vk.present? %>
      <%= link_to @uzanto.vk, target: :_blank, class: 'list-group-item list-group-item-action' do %>
        <%= image_tag('vk.svg', size: 28) %>
        VKontakte
      <% end %>
    <% end %>
  </div>
<% end %>
