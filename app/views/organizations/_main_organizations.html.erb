<h4 class="text-center">
  <%= icon('fas', 'building', 'ÄˆEFORGANIZOJ', class: 'fg-color-info') %>
</h4>

<div class="row">
  <% organizations.each do |organization| %>
    <div class="col-12 col-md-6 mb-2">
      <%= link_to organization_url(organization.short_name), class: 'card-link' do %>
        <div class="card">
          <div class="card-header bg-info fg-color-white text-center">
            <%= organization.name %>
          </div>
          <div class="card-body">
            <% if organization.logo.attached? %>
              <%= image_tag url_for(organization.logo), style: 'float: left; max-width: 64px;', class: 'mr-2' %>
            <% end %>

            <%= organization.description.to_plain_text.first(120) + "..." %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
